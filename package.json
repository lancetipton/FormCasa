{
  "name": "formcasa",
  "version": "1.1.0",
  "description": "Forms from JSON",
  "main": "build/index.cjs.js",
  "module": "build/index.es.js",
  "repository": "https://github.com/lancetipton/FormCasa",
  "author": "Lance Tipton",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "cd ./app && yarn start",
    "test": "NODE_ENV=test jest --no-cache --verbose"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "^7.6.3",
    "@rollup/plugin-replace": "^2.2.1",
    "babel-jest": "24.9.0",
    "jest": "24.7.1",
    "rollup": "1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-cleanup": "3.1.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^5.1.2",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "cascader": "git+https://github.com/lancetipton/cascader.git",
    "react": ">= 16.8.3",
    "react-dom": ">= 16.8.6"
  },
  "peerDependencies": {
    "react": ">= 16.8.3",
    "react-dom": ">= 16.8.6",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git",
    "cascader": "git+https://github.com/lancetipton/cascader.git"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/index.js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "es6"
    ],
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
